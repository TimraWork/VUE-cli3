html, body {
  height: 100%;
}

.wrapper {
  display: flex;
  height: 100%;
  flex-direction: column;
  max-width: none;
}

.content-wrapper {
  flex: 1 0 auto;
}

footer {
  flex: 0 0 auto;
}

